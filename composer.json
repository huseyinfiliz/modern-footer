{
    "name": "huseyinfiliz/modern-footer",
    "description": "Allows the Addition of a Modern Footer",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/huseyinfiliz/modern-footer/issues",
        "source": "https://github.com/huseyinfiliz/modern-footer",
        "forum": "https://discuss.flarum.org/d/17774"
    },
    "homepage": "https://flarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://flarum.org/"
        }
    ],
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Huseyin Filiz",
            "email": "huseyinfiliz@pm.me",
            "role": "Developer"
        }
    ],
    "replace": {
        "fof/custom-footer": "*"
    },
    "autoload": {
        "psr-4": {
            "huseyinfiliz\\ModernFooter\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Modern Footer",
            "category": "feature",
            "icon": {
                "name": "fas fa-cogs",
                "backgroundColor": "#3498db",
                "color": "#fff"
            }
        }
    },
    "flagrow": {
        "discuss": "https://discuss.flarum.org/d/17774"
    },
    "flarum-cli": {
        "modules": {
            "githubActions": true
        }
    },
    "require-dev": {
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
